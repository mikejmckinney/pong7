{
  "ignoreCommand": "if echo \"$VERCEL_GIT_COMMIT_MESSAGE\" | grep -q \"\\[WIP\\]\"; then exit 0; else git diff --quiet HEAD^ HEAD -- . \":!README.md\" \":!AGENT.md\" \":!AGENTS.md\" \":!AI_REPO_GUIDE.md\" \":!docs/\" \":!tests/\" \":!.cursor/\" \":!.gemini/\" \":!.github/\"; fi",
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "pong7",
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
